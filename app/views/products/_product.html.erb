<tr id="<%= dom_id product %>">
  <th scope="row">2</th>
  <td><%= product.title %></td>
  <td><%= truncate(strip_tags(product.description), length: 70) %></td>
  <td> $ <%= product.price %></td>
  <td> 
    <%= link_to "Show", product, class: 'btn btn-primary mb-1' %> <br/>
    <%= link_to "Edit", edit_product_path(product), class: 'btn btn-primary mb-1' %> <br/>
    <%= link_to "Destroy", product, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: 'btn btn-primary mb-1' %> <br/>
  </td>
</tr>
